{
  "Swagger": {
    "BasePath": "/project",
    "FirstVersionIdentifier": "/v1",
    "RouteTemplate": "project/{documentName}/swagger.json",
    "Security": {
      "Name": "Bearer",
      "Scheme": {
        "Description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\"",
        "Name": "Authorization",
        "In": "header",
        "Type": "ApiKey"
      }
    },
    "InternalDoc": {
      "Name": "internal-documentation",
      "Info": {
        "Title": "JSM Project API (rotas internas)",
        "Description": "Essas rotas não devem ser usadas em integrações via API"
      },
      "RedocOptions": {
        "SpecUrl": "/project/internal-documentation/swagger.json",
        "RoutePrefix": "project/internal-documentation",
        "DocumentTitle": "JSM Project API (rotas internas)"
      }
    },
    "ExternalDoc": {
      "Name": "documentation",
      "Info": {
        "Title": "JSM Project API",
        "Description": "Implementar a documentação Swagger."
      },
      "RedocOptions": {
        "SpecUrl": "/project/documentation/swagger.json",
        "RoutePrefix": "project/documentation",
        "DocumentTitle": "JSM Project API"
      }
    },
    "FilePaths": {
      "Api": "JSM.Project.Api.xml",
      "Domain": "JSM.Project.Domain.xml"
    }
  }
}